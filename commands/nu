const { SlashCommandBuilder } = require('@discordjs/builders');
const Discord = require('discord.js')
const config = require('../config.json')

module.exports = {
    help: false,
    data: new SlashCommandBuilder()
        .setName('nu')
        .setDescription(`nu.`)
        .addBooleanOption(option => option.setName('private').setDescription('Should the nu be private?').setRequired(true))
        ,
    async execute(client, interaction) {
        if (interaction.options.getBoolean('private')) {
            interaction.reply({content: 'nu.', allowedMentions: { repliedUser: false }, ephemeral: true})
        } else {
            interaction.reply({content: 'nu.', allowedMentions: { repliedUser: false }})
        }
    },
};